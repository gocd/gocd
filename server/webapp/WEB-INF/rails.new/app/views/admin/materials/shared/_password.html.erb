<div class="form_item_block">
    <label><%= l.string('PASSWORD') -%></label>
    <%= scope[:form].hidden_field(com.thoughtworks.go.config.materials.ScmMaterialConfig::ENCRYPTED_PASSWORD, {:class => "form_input encrypted_password"}) -%>
    <%= password_field_tag("material[password]", '', {:class => "form_input password", :disabled => true}) -%>
    <%= error_message_on(scope[:form].object, com.thoughtworks.go.config.materials.ScmMaterialConfig::PASSWORD, :css_class => "form_error") %>
    <div class="checkbox_row">
        <%= check_box_tag("material[#{com.thoughtworks.go.config.materials.ScmMaterialConfig::PASSWORD_CHANGED}]", "1", false, :class => "password_changed") %>
        <label class="condition" for="material_<%= com.thoughtworks.go.config.materials.ScmMaterialConfig::PASSWORD_CHANGED -%>"><%= l.string("CHANGE_PASSWORD") -%></label>
    </div>
</div>

 <script type="text/javascript">
     var checkBox = jQuery("#material_<%= com.thoughtworks.go.config.materials.ScmMaterialConfig::PASSWORD_CHANGED -%>");
     var passwordField = jQuery("#material_<%=com.thoughtworks.go.config.materials.ScmMaterialConfig::PASSWORD -%>");
        Util.on_load(function() {
            Util.bindPasswordField(checkBox, passwordField);
        });
 </script>

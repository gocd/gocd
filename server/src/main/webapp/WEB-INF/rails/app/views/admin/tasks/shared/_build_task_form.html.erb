<%- task_type = scope[:task_type] %>
<div class="form_item_block">
    <%= label_tag 'Build File' -%>
    <%= scope[:form].text_field com.thoughtworks.go.config.BuildTask::BUILD_FILE %>
    <div class="contextual_help has_go_tip_right build_file" title="<%= com.thoughtworks.go.i18n.LocalizedMessage::tooltipBuildFilePath(task_type) -%>"></div>
    <%= error_message_on(scope[:task], com.thoughtworks.go.config.BuildTask::BUILD_FILE, :css_class => "form_error") %>
</div>
<div class="form_item_block">
    <%= label_tag 'Target' -%>
    <%= scope[:form].text_field com.thoughtworks.go.config.BuildTask::TARGET %>
    <div class="contextual_help has_go_tip_right target" title="<%= com.thoughtworks.go.i18n.LocalizedMessage::tooltipDefaultTarget(task_type) -%>"></div>
    <%= error_message_on(scope[:task], com.thoughtworks.go.config.BuildTask::TARGET, :css_class => "form_error") %>
</div>
<div class="form_item_block">
    <%= label_tag 'Working Directory' -%>
    <%= scope[:form].text_field com.thoughtworks.go.config.BuildTask::WORKING_DIRECTORY %>
    <div class="contextual_help has_go_tip_right working_directory" title="The directory from where <%= task_type.downcase -%> is invoked." ></div>
    <%= error_message_on(scope[:task], com.thoughtworks.go.config.BuildTask::WORKING_DIRECTORY, :css_class => "form_error") %>
</div>

<% if @errors && !@errors.empty? %>
    <div class="form_submit_errors">
        <div class="errors">
            <h3>The following error(s) need to be resolved in order to perform this action:</h3>
            <ul>
                <% @errors.each do |error| %>
                    <li class="error"><%= h(error.to_s) -%></li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>
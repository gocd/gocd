<script type="text/javascript">
  var pipelineHistoryPage = new PipelineHistoryPage();
  var pipelineActions = new PipelineActions();
  var stageActions = new StageActions();
  var paginator = new Paginator();

  var ReformatAllBuildTimes = Class.create();
  ReformatAllBuildTimes.prototype = {
    initialize: function () {
    },
    notify: function () {
      jQuery(".pipeline-info.scheduled-date").map(function (idx, scheduledDate) {
        var timestamp = parseInt(jQuery(scheduledDate).attr("data"));
        if (isNaN(timestamp)) return;
        var time = new Date(timestamp);
        jQuery(scheduledDate).text(moment(time).format('DD MMM YYYY [at] HH:mm:ss [Local Time]'));
      });
    }
  }

  new ReformatAllBuildTimes().notify();

  var dashboard_periodical_executor = new DashboardPeriodicalExecutor('pipelineHistory.json?pipelineName=$pipelineName');
  var pipelineHistoryObserver = new PipelineHistoryObserver('history');
  dashboard_periodical_executor.register(pipelineHistoryObserver);
  dashboard_periodical_executor.register(new ReformatAllBuildTimes());

  dashboard_periodical_executor.start();

      #if($pipeline_comment_feature_toggle_key)
      var PipelineHistoryComment = initPipelineHistoryComment(jQuery, Modalbox, dashboard_periodical_executor);
      #end

  var pipelineName = "$pipelineName";
</script>


<!DOCTYPE html>
<html class="no-js">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="gocd-params"
        data-timezone="${serverTimezoneUTCOffset}"
        data-page-refresh-interval="${spaRefreshInterval}"
        data-page-timeout="${spaTimeout}">
  <title>${viewTitle} - Go</title>

  <link rel="shortcut icon" href="/go/${railsAssetsService.getAssetPath('cruise.ico')}"/>
  <link href="/go/${railsAssetsService.getAssetPath('frameworks.css')}" media="screen" rel="stylesheet"/>
  #if(${railsAssetsService.getAssetPath("single_page_apps/${controllerName}.css")} != "")
    <link href="/go/${railsAssetsService.getAssetPath("single_page_apps/${controllerName}.css")}" media="screen"
          rel="stylesheet"/>
  #end

  #foreach( $css in ${webpackAssetsService.getCSSAssetPathsFor("single_page_apps/${controllerName}", "single_page_apps/header_footer_shim")})
    <link href="${css}" media="screen" rel="stylesheet"/>
  #end

  #foreach( $js in ${webpackAssetsService.getJSAssetPathsFor("single_page_apps/polyfill", "single_page_apps/${controllerName}", "single_page_apps/header_footer_shim")})
    <script src="${js}"></script>
  #end
</head>

<body id="${controllerName}-page"
      data-controller-name="${controllerName}"
      data-is-user-admin="${securityService.isUserAdmin(${currentUser})}"
      data-can-user-view-admin="${securityService.canViewAdminPage(${currentUser})}"
      data-is-user-group-admin="${securityService.isUserGroupAdmin(${currentUser})}"
      data-can-user-view-templates="${securityService.isAuthorizedToViewTemplates(${currentUser})}"
      data-view-name="${viewName}"
      data-show-analytics-dashboard="${showAnalyticsDashboard}"
      data-user-display-name="${currentUser.displayName}"
      data-user-anonymous="${currentUser.anonymous}"
      data-is-server-in-maintenance-mode="${maintenanceModeService.isMaintenanceMode()}"
      data-enable-personal-access-token-spa="$enable_access_tokens_spa">
<div class="page-wrap">
  <header id="app-menu">
  </header>

  <main class="main-container">
    #parse("${viewName}")
  </main>

</div>

  <div id="app-footer"></div>

</body>
</html>

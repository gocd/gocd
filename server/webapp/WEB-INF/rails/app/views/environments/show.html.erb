<%- @view_title = "#{@environment.name()} - Environment" -%>
<%- @show_environment_breadcrumb = true %>
<%= content_wrapper_tag %>
<div class="row">
<div class="environment show_environment">
    <div>
        <div class="added_item added_pipelines">
            <h3>
                PIPELINES
                <button value="Edit View" type="button" id="edit_pipelines" class="submit edit-environment edit-pipelines"><span>Edit</span></button>
            </h3>
            <ul>
                <%- @environment.getPipelineNames().each do |pipelineName| -%>
                    <li><%= pipelineName -%></li>
                <%- end -%>
            </ul>
        </div>
        <div class="added_item added_agents">
            <h3>
                AGENTS
                <button value="Edit View" type="button" id="edit_agents" class="submit edit-environment edit-agents"><span>Edit</span></button>
            </h3>
            <ul>
                <%- @agent_details.each do |agent| -%>
                    <%= content_tag "li", "#{agent.getHostname()} (#{agent.getIpAddress()})", :title => agent.getLocation() -%>
                <%- end -%>
            </ul>
        </div>

        <div class="added_item added_environment_variables">
            <h3>
                Environment Variables
                <button value="Edit View" type="button" id="edit_environment_variables" class="submit edit-environment edit-environment-vars"><span>Edit</span></button>
            </h3>


            <ul>
                <%- @environment.getPlainTextVariables().each do |var| -%>
                    <li><%= h(var.getName()) %> = <%= h(var.getValue()) -%></li>
                <%- end -%>
            </ul>
            <br>
            <h3>
                Secure Variables
            </h3>

            <ul>
                <%- @environment.getSecureVariables().each do |var| -%>
                    <li><%= h(var.getName()) %> = <%= h(var.getDisplayValue()) -%></li>
                <%- end -%>
            </ul>
        </div>

    </div>
</div>
</div>
<%= end_content_wrapper %>
<script type="text/javascript">
    Util.on_load(function() {
        jQuery('#edit_pipelines').click(function() {
            Util.ajax_modal("<%= environment_edit_pipelines_path({:name => @environment.name()}) -%>", {width: 805, title: <%== 'Pipelines'.to_json -%>});
        });
        jQuery('#edit_agents').click(function() {
            Util.ajax_modal("<%= environment_edit_agents_path({:name => @environment.name()}) -%>", {width: 800, title: <%== 'Agents'.to_json -%>});
        });
        jQuery('#edit_environment_variables').click(function() {
            Util.ajax_modal("<%= environment_edit_variables_path({:name => @environment.name()}) -%>", {width: 800, title: <%== 'Environment Variables'.to_json -%>});
        });
        AjaxForm.error_box_selector = '#env_form_error_box';
    });
</script>

<hibernate-mapping
  xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping https://hibernate.org/xsd/hibernate-mapping/hibernate-mapping-4.0.xsd"
  package="com.thoughtworks.go.domain" default-access="field" default-lazy="false">
    <class name="com.thoughtworks.go.domain.User" table="users">
        <cache usage="read-write"/>
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name"/>
        <property name="displayName"/>
        <property name="email"/>
        <property name="matcher"/>
        <property name="emailMe"/>
        <property name="enabled"/>

        <bag name="notificationFilters" inverse="false" cascade="all-delete-orphan" lazy="false">
            <cache usage="read-write"/>
            <key column="userid"/>
            <one-to-many class="com.thoughtworks.go.domain.NotificationFilter"/>
        </bag>
    </class>
</hibernate-mapping>

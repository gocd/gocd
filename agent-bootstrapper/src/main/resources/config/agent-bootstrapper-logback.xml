<configuration
    xmlns="http://ch.qos.logback/xml/ns/logback"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://ch.qos.logback/xml/ns/logback http://ch.qos.logback/xml/ns/logback/logback.xsd"
    debug="${gocd.agentBootstrapper.logback.debug:-false}"
    scan="${gocd.agentBootstrapper.logback.scan:-true}"
    scanPeriod="${gocd.agentBootstrapper.logback.scanPeriod:-5 seconds}"
>

  <appender name="FileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${gocd.agent.log.dir:-logs}/go-agent-bootstrapper.log</file>
    <encoder>
      <pattern>
        ${gocd.agentBootstrapper.logback.defaultPattern:-%date{ISO8601} %-5level [%thread] %logger{0}:%line - %msg%n}
      </pattern>
    </encoder>

    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>
        ${gocd.agent.log.dir:-logs}/go-agent-bootstrapper.log.%d{yyyy-MM-dd}.%i.gz
      </fileNamePattern>
      <maxFileSize>${gocd.agentBootstrapper.logback.defaultRollingFileAppender.rotation.maxFileSize:-5 MB}</maxFileSize>
      <maxHistory>${gocd.agentBootstrapper.logback.defaultRollingFileAppender.rotation.maxHistory:-4}</maxHistory>
      <totalSizeCap>
        ${gocd.agentBootstrapper.logback.defaultRollingFileAppender.rotation.totalSizeCap:-20 MB}
      </totalSizeCap>
    </rollingPolicy>
  </appender>

  <root level="${gocd.agentBootstrapper.logback.root.level:-INFO}">
    <appender-ref ref="${gocd.agentBootstrapper.logback.root.appender:-FileAppender}"/>
  </root>

  <!-- make sure this is the last line in the config -->
  <include optional="true" file="${cruise.config.file/..:-config}/agent-bootstrapper-logback-include.xml"/>
</configuration>

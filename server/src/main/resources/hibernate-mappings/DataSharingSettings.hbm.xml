<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.thoughtworks.go.domain" default-access="field" default-lazy="false">
    <class name="com.thoughtworks.go.server.domain.DataSharingSettings" table="DataSharingSettings">
        <cache usage="read-write"/>
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="allowSharing"/>
        <property name="updatedBy"/>
        <property name="updatedOn"/>
    </class>

    <query name="load.datasharing.settings">
        from DataSharingSettings
    </query>
</hibernate-mapping>

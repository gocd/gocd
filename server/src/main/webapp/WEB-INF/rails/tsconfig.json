{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["webpack/*"]
    },
    "outDir": "./tmp/typescript-out/",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "m",
    "allowJs": false,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": true,
    "typeRoots": ["node_modules/@types", "typings"],
    "types": ["chart.js"]
  },
  "include": [
    "webpack/**/*.ts",
    "webpack/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}

#if($_page_title)
<div id="job_details_header" class="job_details entity_title page_header">
  <div class="row">
    <ul class="entity_title">
      <li class="name"><a href="$req.getContextPath()/tab/pipeline/history/$presenter.pipelineName"
                          title="View this pipeline's activity">$presenter.pipelineName</a></li>
      <li class="pipeline_label"><a
        href="$req.getContextPath()/pipelines/value_stream_map/$presenter.pipelineName/$presenter.pipelineCounter"
        title="View this stage's jobs summary">$presenter.pipelineLabel</a></li>
      <li class="stage_name"><a href="$req.getContextPath()/pipelines/$presenter.stageLocator"
                                title="View this stage's details">$presenter.stageName / $presenter.stageCounter</a>
      </li>
      <li class='last'><h1>$presenter.buildName</h1></li>
    </ul>
    #if($isEditableViaUI && ($userHasAdministratorRights || $userHasGroupAdministratorRights))
      <div class="job_detail_setting">
        #if($pipeline_config_single_page_app_key && $quick_edit_page_toggle_key)
          <a href="$req.getContextPath()/admin/pipelines/$presenter.pipelineName/edit" class="icon16 setting"></a>
        #else
          <a href="$req.getContextPath()/admin/pipelines/$presenter.pipelineName/general" class="icon16 setting"></a>
        #end

      </div>
    #end
    <div id="build_status" class="build-status"></div>
  </div>
</div>
#end

<%= render :partial => "form", :locals => {:scope => {:isNewRepo => false, :package_repository => @package_repository, :package_repositories => @package_repositories, :url => package_repositories_update_path(:id => @package_repository.getId()), :method => "PUT",:package_to_pipeline_map => @package_to_pipeline_map}} %>
<script type="text/javascript">
    Util.on_load(function () {
        new PackageMaterialCheckConnection("<%= package_repositories_check_connection_path%>").bind("#package_repositories_edit_form","#check_connection","#repository_connection_message");

        var url = '<%= package_repositories_plugin_config_for_repo_path(:id=>@package_repository.getId(), :plugin => "$pluginid$") -%>';
        var errorMessageHeading = '<%= l.string("GLOBAL_ERRORS_MESSAGE") -%>'
        new PackageRepositoryConfiguration("#package_repository_pluginConfiguration_id", "#pluginConfigurations", url, errorMessageHeading).init();
    });
</script>

<div class="form_item_block required">
  <%= required_label(scope[:form], com.thoughtworks.go.config.materials.ScmMaterialConfig::URL, 'URL') -%>
  <%= scope[:form].text_field com.thoughtworks.go.config.materials.ScmMaterialConfig::URL, {:class => "form_input required tfs_url", :id => nil} -%>
  <%= error_message_on(scope[:material], com.thoughtworks.go.config.materials.ScmMaterialConfig::URL, :css_class => "form_error") %>
</div>

<div class="form_item_block">
  <label>Domain</label>
  <%= scope[:form].text_field(com.thoughtworks.go.config.materials.tfs.TfsMaterialConfig::DOMAIN, {:class => "form_input tfs_domain", :id => nil}) -%>
  <%= error_message_on(scope[:material], com.thoughtworks.go.config.materials.tfs.TfsMaterialConfig::DOMAIN, :css_class => "form_error") %>
</div>

<div class="form_item_block required">
  <%= required_label(scope[:form], com.thoughtworks.go.config.materials.ScmMaterialConfig::USERNAME, 'Username') -%>
  <%= scope[:form].text_field com.thoughtworks.go.config.materials.ScmMaterialConfig::USERNAME, {:class => "form_input required tfs_username", :id => nil} -%>
  <%= error_message_on(scope[:material], com.thoughtworks.go.config.materials.ScmMaterialConfig::USERNAME, :css_class => "form_error") %>
</div>

<%= render :partial => 'admin/materials/shared/plain_password', :locals => {:scope => {:form => scope[:form], :password_class => 'tfs_password'}} %>

<div class="form_item_block required">
  <%= required_label(scope[:form], com.thoughtworks.go.config.materials.tfs.TfsMaterialConfig::PROJECT_PATH, 'Project Path') -%>
  <%= scope[:form].text_field com.thoughtworks.go.config.materials.tfs.TfsMaterialConfig::PROJECT_PATH, {:class => "form_input required tfs_project_path", :id => nil} -%>
  <%= error_message_on(scope[:material], com.thoughtworks.go.config.materials.tfs.TfsMaterialConfig::PROJECT_PATH, :css_class => "form_error") %>
</div>

<%= render :partial => "admin/materials/shared/dest_folder", :locals => {:scope => {:form => scope[:form]}} %>
<%= render :partial => "admin/materials/shared/options", :locals => {:scope => {:form => scope[:form]}} %>
<%= render :partial => "admin/materials/shared/filter", :locals => {:scope => {:form => scope[:form]}} %>


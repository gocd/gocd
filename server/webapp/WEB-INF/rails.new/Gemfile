source 'https://rubygems.org'

git_source(:github) do |repo_name|
  repo_name = "#{repo_name}/#{repo_name}" unless repo_name.include?("/")
  "https://github.com/#{repo_name}.git"
end

gem 'rails', '5.1.4'
gem 'sass-rails', '5.0.7'
gem 'webpacker'
gem 'uglifier'
gem 'js-routes'
gem 'roar', '1.0.1'
gem 'representable', '2.1.7'
gem 'versionist'
gem 'dynamic_form'

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]

gem 'rake'

gem 'oauth2_provider', '1.0.3', path: 'vendor/engines/oauth2_provider'
gem 'validatable', '>=1.6.0'

group :development do
  # jasmine-rails seems to add stuff to the asset pipeline and causes view spec failures.
  # Since we use `jasmine:ci` task from `jasmine` gem and `jasmine-rails` purely in the dev environment to run specs,
  # we avoid loading this gem in the test environment.
  gem 'jasmine-rails'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'capybara'
  gem 'listen'

  # === begin jasmine+friends
  gem 'jasmine'
  gem 'jasmine-core'
  gem 'selenium-webdriver'
  # === end jasmine+friends

  gem 'rspec_junit_formatter'
  gem 'rails-controller-testing'

  # to enable debugging, turn on debug flag:
  # -Djruby.debug.fullTrace=true
  # gem 'pry'
  # git 'https://github.com/ketan/pry-debugger-jruby' do
  #   gem 'pry-debugger-jruby'
  # end
  # gem 'pry-state'
end

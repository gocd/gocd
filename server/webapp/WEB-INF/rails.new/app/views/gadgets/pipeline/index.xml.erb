<?xml version="1.0" encoding="UTF-8" ?>
<Module>
    <ModulePrefs
            title="<%=l.string('GADGET_NAME_PIPELINE_STATUS')%>"
            author="Go"
            author_email="support@thoughtworks.com"
            author_link="https://www.thoughtworks.com/go/">
        <Require feature="oauthpopup"/>
        <Require feature="setprefs"/>
        <Require feature="dynamic-height" />
        <OAuth>
            <Service name="<%=l.string("GO")%>">
                <Request method="GET" url="<%= oauth_engine.tokens_get_token_url %>"/>
                <Access method="GET" url="<%= oauth_engine.tokens_get_token_url %>"/>
                <Authorization url="<%= oauth_engine.authorize_index_url %>"/>
            </Service>
        </OAuth>
    </ModulePrefs>
    <UserPref name="pipelineName" datatype="string" default_value="" display_name="Pipeline Name" />
    <UserPref name="autoRefresh" datatype="bool" default_value="true" display_name="Enable Auto Refresh" />
    <Content type="html">
        <![CDATA[
            <%= render :partial=>'pipeline_content.html', :locals => {:scope => {}} %>
        ]]>
    </Content>
</Module>